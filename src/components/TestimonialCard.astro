---
interface Props {
  quote: string;
  author: string;
  role?: string;
}

const { quote, author, role } = Astro.props;
---

<div class="card glass-shine group h-full flex flex-col">
  <svg class="w-8 h-8 text-brand-gold/30 mb-3 group-hover:text-brand-gold/50 transition-colors" fill="currentColor" viewBox="0 0 24 24">
    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
  </svg>

  <blockquote class="text-white/80 text-sm mb-4 flex-1 leading-relaxed">
    "{quote}"
  </blockquote>

  <div class="border-t border-white/10 pt-3">
    <p class="font-display font-bold text-sm">{author}</p>
    {role && <p class="text-white/40 text-xs">{role}</p>}
  </div>
</div>
