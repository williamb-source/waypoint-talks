---
interface Props {
  quote: string;
  author: string;
  role?: string;
}

const { quote, author, role } = Astro.props;
---

<div class="card bg-white">
  <svg class="w-10 h-10 text-brand-gold/30 mb-4" fill="currentColor" viewBox="0 0 24 24">
    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
  </svg>

  <blockquote class="text-lg text-brand-navy mb-6 leading-relaxed">
    "{quote}"
  </blockquote>

  <div class="border-t border-brand-gold/10 pt-4">
    <p class="font-display font-bold text-brand-navy">{author}</p>
    {role && <p class="text-brand-gray text-sm">{role}</p>}
  </div>
</div>
