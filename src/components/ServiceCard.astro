---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  features: string[];
  highlighted?: boolean;
}

const { title, subtitle, description, features, highlighted = false } = Astro.props;
---

<div class:list={[
  'card relative overflow-hidden group glass-shine h-full flex flex-col',
  highlighted && 'ring-1 ring-brand-gold/50'
]}>
  {highlighted && (
    <div class="absolute top-0 right-0 bg-brand-gold text-brand-dark text-xs font-bold px-3 py-1 rounded-bl-xl">
      Popular
    </div>
  )}

  <div class="relative z-10 flex-1 flex flex-col">
    <div class="mb-3">
      <h3 class="font-display text-xl mb-1 group-hover:text-brand-gold transition-colors">{title}</h3>
      <p class="text-brand-gold text-sm font-medium">{subtitle}</p>
    </div>

    <p class="text-white/50 text-sm mb-4">{description}</p>

    <ul class="space-y-2 mb-6 flex-1">
      {features.map(feature => (
        <li class="flex items-start gap-2 text-sm">
          <svg class="w-4 h-4 text-brand-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-white/60">{feature}</span>
        </li>
      ))}
    </ul>

    <a
      href="https://calendly.com/waypointtalks"
      target="_blank"
      rel="noopener"
      class:list={[
        'w-full text-center block text-sm',
        highlighted ? 'btn-primary' : 'btn-secondary'
      ]}
    >
      Get Started
    </a>
  </div>
</div>
