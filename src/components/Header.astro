---
const navLinks = [
  { href: '/waypoint-talks/', label: 'Home' },
  { href: '/waypoint-talks/about', label: 'About' },
  { href: '/waypoint-talks/offerings', label: 'Offerings' },
  { href: '/waypoint-talks/blog', label: 'Blog' },
  { href: '/waypoint-talks/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 glass border-b border-white/20 animate-fade-in">
  <nav class="container py-4">
    <div class="flex items-center justify-between">
      <!-- Logo from original site -->
      <a href="/waypoint-talks/" class="flex items-center gap-3 group">
        <img
          src="https://waypointtalks.com/wp-content/uploads/2025/03/Waypoint-talks-4.png"
          alt="Waypoint Talks"
          class="h-10 w-10 object-contain transition-transform duration-300 group-hover:scale-110"
        />
        <span class="font-display font-bold text-xl text-brand-navy group-hover:text-brand-gold transition-colors duration-300">
          Waypoint Talks
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              'font-medium transition-all duration-300 hover-underline',
              currentPath === link.href || (link.href !== '/waypoint-talks/' && currentPath.startsWith(link.href))
                ? 'text-brand-gold'
                : 'text-brand-navy hover:text-brand-gold'
            ]}
          >
            {link.label}
          </a>
        ))}
        <a
          href="https://calendly.com/waypointtalks"
          target="_blank"
          rel="noopener"
          class="btn-primary glass-shine"
        >
          Book a Call
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-brand-navy hover:text-brand-gold transition-colors rounded-lg hover:bg-white/50"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation - Glass Panel -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-white/20 pt-4">
      <div class="flex flex-col gap-4 animate-fade-in-up">
        {navLinks.map((link, index) => (
          <a
            href={link.href}
            class:list={[
              'font-medium py-2 px-4 rounded-lg transition-all duration-300',
              currentPath === link.href || (link.href !== '/waypoint-talks/' && currentPath.startsWith(link.href))
                ? 'text-brand-gold bg-brand-gold/10'
                : 'text-brand-navy hover:text-brand-gold hover:bg-white/50'
            ]}
            style={`animation-delay: ${index * 0.05}s`}
          >
            {link.label}
          </a>
        ))}
        <a
          href="https://calendly.com/waypointtalks"
          target="_blank"
          rel="noopener"
          class="btn-primary text-center mt-2"
        >
          Book a Call
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');

  menuBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');

    // Rotate hamburger to X
    if (menuBtn) {
      menuBtn.querySelector('svg')?.classList.toggle('rotate-90');
    }

    if (menuIcon) {
      menuIcon.setAttribute('d', isOpen
        ? 'M6 18L18 6M6 6l12 12'
        : 'M4 6h16M4 12h16M4 18h16'
      );
    }
  });
</script>

<style>
  header {
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
  }
</style>
