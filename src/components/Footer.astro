---
const currentYear = new Date().getFullYear();

const navLinks = [
  { href: '/waypoint-talks/', label: 'Home' },
  { href: '/waypoint-talks/about', label: 'About' },
  { href: '/waypoint-talks/offerings', label: 'Offerings' },
  { href: '/waypoint-talks/blog', label: 'Blog' },
  { href: '/waypoint-talks/contact', label: 'Contact' },
];
---

<footer class="bg-brand-navy text-white relative overflow-hidden">
  <!-- Subtle gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-brand-navy via-brand-navy to-brand-navy-light opacity-50"></div>

  <div class="container py-12 md:py-16 relative z-10">
    <div class="grid md:grid-cols-3 gap-8 md:gap-12">
      <!-- Brand -->
      <div class="scroll-animate">
        <a href="/waypoint-talks/" class="flex items-center gap-3 mb-4 group">
          <img
            src="https://waypointtalks.com/wp-content/uploads/2025/03/Waypoint-talks-4.png"
            alt="Waypoint Talks"
            class="h-10 w-10 object-contain transition-transform duration-300 group-hover:scale-110 brightness-0 invert"
          />
          <span class="font-display font-bold text-xl transition-colors duration-300 group-hover:text-brand-gold">
            Waypoint Talks
          </span>
        </a>
        <p class="text-gray-400 mb-4">
          Clarity. Planning. Action.<br />
          Set your Waypoint today.
        </p>
        <a
          href="https://www.tiktok.com/@waypoint.talks"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 text-gray-400 hover:text-brand-gold transition-all duration-300 hover:translate-x-1"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
          </svg>
          @waypoint.talks
        </a>
      </div>

      <!-- Navigation -->
      <div class="scroll-animate" style="transition-delay: 0.1s;">
        <h3 class="font-display font-bold text-lg mb-4">Navigation</h3>
        <ul class="space-y-2">
          {navLinks.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-brand-gold transition-all duration-300 hover:translate-x-1 inline-block"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="scroll-animate" style="transition-delay: 0.2s;">
        <h3 class="font-display font-bold text-lg mb-4">Get in Touch</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="mailto:william@waypointtalks.com"
              class="text-gray-400 hover:text-brand-gold transition-all duration-300 flex items-center gap-2 group"
            >
              <svg class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              william@waypointtalks.com
            </a>
          </li>
          <li class="pt-2">
            <a
              href="https://calendly.com/waypointtalks"
              target="_blank"
              rel="noopener"
              class="btn-primary glass-shine"
            >
              Book a Free Call
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500 text-sm">
      <p>&copy; {currentYear} Waypoint Talks. All rights reserved.</p>
    </div>
  </div>
</footer>
