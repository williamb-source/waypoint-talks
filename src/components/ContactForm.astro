---
// Using Formspree for form handling - replace YOUR_FORM_ID with actual ID
const formspreeEndpoint = "https://formspree.io/f/YOUR_FORM_ID";
---

<form
  action={formspreeEndpoint}
  method="POST"
  class="space-y-6"
>
  <div>
    <label for="name" class="block text-sm font-medium text-brand-navy mb-2">
      Name <span class="text-brand-gold">*</span>
    </label>
    <input
      type="text"
      name="name"
      id="name"
      required
      class="w-full px-4 py-3 bg-white border border-brand-gold/20 rounded-lg focus:ring-2 focus:ring-brand-gold focus:border-transparent transition-all duration-200 text-brand-navy placeholder-brand-gray/50"
      placeholder="Your name"
    />
  </div>

  <div>
    <label for="email" class="block text-sm font-medium text-brand-navy mb-2">
      Email <span class="text-brand-gold">*</span>
    </label>
    <input
      type="email"
      name="email"
      id="email"
      required
      class="w-full px-4 py-3 bg-white border border-brand-gold/20 rounded-lg focus:ring-2 focus:ring-brand-gold focus:border-transparent transition-all duration-200 text-brand-navy placeholder-brand-gray/50"
      placeholder="your@email.com"
    />
  </div>

  <div>
    <label for="message" class="block text-sm font-medium text-brand-navy mb-2">
      Message <span class="text-brand-gold">*</span>
    </label>
    <textarea
      name="message"
      id="message"
      rows="5"
      required
      class="w-full px-4 py-3 bg-white border border-brand-gold/20 rounded-lg focus:ring-2 focus:ring-brand-gold focus:border-transparent transition-all duration-200 text-brand-navy placeholder-brand-gray/50 resize-none"
      placeholder="How can I help you?"
    ></textarea>
  </div>

  <!-- Honeypot field for spam protection -->
  <input type="text" name="_gotcha" style="display:none" />

  <button
    type="submit"
    class="w-full btn-primary"
  >
    Send Message
  </button>

  <p class="text-sm text-brand-gray text-center">
    I'll respond within 24-48 hours.
  </p>
</form>
