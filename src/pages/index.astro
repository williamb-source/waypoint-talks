---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';

const services = [
  {
    title: 'Clarity Jumpstart',
    subtitle: '45-minute session',
    description: 'Break through the fog and gain direction on career, life, or mindset.',
    features: [
      'One-on-one clarity session',
      'Action plan sent afterward',
      'Perfect for first-timers'
    ]
  },
  {
    title: 'The Waypoint Package',
    subtitle: '3 sessions / 3 weeks',
    description: 'Anchor and momentum for those ready to commit to real change.',
    features: [
      'Three individual sessions',
      'Unlimited email check-ins',
      'Session notes + action plans'
    ],
    highlighted: true
  },
  {
    title: 'Waypoint Deep Dive',
    subtitle: '6 sessions / 3 months',
    description: 'Sustained support for major transitions and burnout recovery.',
    features: [
      'Six bi-weekly sessions',
      'Email & voice-note check-ins',
      'Customized exercises'
    ]
  }
];

const testimonials = [
  {
    quote: "The clarity I gained from just one session was incredible. I finally know what direction to take.",
    author: "Sarah M.",
    role: "Marketing Director"
  },
  {
    quote: "William has a gift for asking the right questions. He helped me see possibilities I couldn't see on my own.",
    author: "James T.",
    role: "Software Engineer"
  },
  {
    quote: "I was stuck in analysis paralysis for months. After working with Waypoint Talks, I took action within a week.",
    author: "Michelle K.",
    role: "Entrepreneur"
  }
];
---

<BaseLayout
  title="Waypoint Talks | Clarity Coaching"
  description="Clarity coaching to help you untangle thoughts, make decisions, and take action."
>
  <!-- Hero Section - Tighter -->
  <section class="pt-8 pb-12 md:pt-12 md:pb-16">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <!-- Text -->
        <div class="animate-fade-in-up">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display mb-4 leading-tight">
            Clarity Starts with a
            <span class="text-gradient"> Conversation</span>
          </h1>
          <p class="text-lg text-white/60 mb-6 leading-relaxed max-w-lg">
            Feeling stuck? Overwhelmed by options? Let's slow down, untangle your thoughts, and find your next step forward.
          </p>
          <div class="flex flex-col sm:flex-row gap-3">
            <a
              href="https://calendly.com/waypointtalks"
              target="_blank"
              rel="noopener"
              class="btn-primary animate-pulse-subtle glass-shine"
            >
              Book a Free Intro Call
            </a>
            <Button href="/waypoint-talks/offerings" variant="secondary">
              View Offerings
            </Button>
          </div>
        </div>

        <!-- Image from original site -->
        <div class="animate-fade-in-up delay-200 lg:order-last">
          <div class="relative">
            <div class="absolute -inset-4 bg-brand-gold/10 blur-3xl rounded-full"></div>
            <img
              src="https://waypointtalks.com/wp-content/uploads/2025/03/Screenshot-2025-03-29-at-2.02.09%20PM.png"
              alt="Waypoint Talks"
              class="relative rounded-2xl shadow-2xl shadow-black/50 border border-white/10 hover-lift"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Waypoint Section -->
  <section class="section-tight">
    <div class="container">
      <div class="text-center mb-10 scroll-animate">
        <h2 class="text-2xl md:text-3xl mb-3">Why Waypoint Talks?</h2>
        <p class="text-white/50">Clarity takes space. Meaningful insights emerge when you have room to think.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <div class="card glass-shine scroll-animate-left hover-lift">
          <div class="w-12 h-12 bg-brand-gold/10 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-lg font-display mb-2">Begin with Clarity</h3>
          <p class="text-white/50 text-sm">We explore where you are, what concerns you, and what matters most. No pressure — just space to think out loud.</p>
        </div>

        <div class="card glass-shine scroll-animate-right hover-lift">
          <div class="w-12 h-12 bg-brand-gold/10 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="text-lg font-display mb-2">End with Direction</h3>
          <p class="text-white/50 text-sm">Every session ends with one clear realization and one concrete next step. You leave grounded and ready to move.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-10 scroll-animate">
        <h2 class="text-2xl md:text-3xl mb-3">Choose Your Path</h2>
        <p class="text-white/50">Single breakthrough or sustained support — there's an option for you.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {services.map((service, index) => (
          <div class="scroll-animate" style={`transition-delay: ${index * 0.1}s;`}>
            <ServiceCard {...service} />
          </div>
        ))}
      </div>

      <div class="text-center mt-8 scroll-animate">
        <Button href="/waypoint-talks/offerings" variant="secondary">
          Learn More
        </Button>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section-tight">
    <div class="container">
      <div class="text-center mb-10 scroll-animate">
        <h2 class="text-2xl md:text-3xl mb-3">What Clients Say</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {testimonials.map((testimonial, index) => (
          <div class="scroll-animate-scale" style={`transition-delay: ${index * 0.1}s;`}>
            <TestimonialCard {...testimonial} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section">
    <div class="container">
      <div class="card max-w-2xl mx-auto text-center scroll-animate hover-glow">
        <h2 class="text-2xl md:text-3xl mb-3">
          You Don't Need All the Answers
        </h2>
        <p class="text-white/50 mb-6">
          That's exactly why we talk. Book a free intro call and explore what clarity could look like for you.
        </p>
        <a
          href="https://calendly.com/waypointtalks"
          target="_blank"
          rel="noopener"
          class="btn-primary animate-pulse-subtle glass-shine"
        >
          Book Your Free Call
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
